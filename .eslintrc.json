{   
    "env": {
        "es6": true,
        "browser": true,
        "jest": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-console": 0,
        "no-plusplus": 0,
        "prefer-promise-reject-errors": 0,
        "global-require": 0,
        "no-shadow": 0,
        "import/prefer-default-export": 0
    }    
}